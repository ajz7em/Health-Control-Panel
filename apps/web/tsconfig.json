{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "incremental": true,
    "moduleResolution": "Bundler",
    "types": [
      "node",
      "react"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "../../packages/core/src/*"
      ],
      "@validation/*": [
        "../../packages/validation/src/*"
      ],
      "@infra/*": [
        "../../packages/infra/src/*"
      ],
      "@test/*": [
        "../../packages/test/src/*"
      ]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.cts",
    "**/*.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
